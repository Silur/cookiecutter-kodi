<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="{{cookiecutter.id}}" name="{{cookiecutter.name}}" version="1.0.0" provider-name="{{cookiecutter.author}}">
	<requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
    <platform>{{cookiecutter.platform}}</platform>
    <summary lang="en">{{cookiecutter.summary}}</summary>
    <description lang="en">{{cookiecutter.description}}</description>
		<license>GNU General Public License, v3</license>
    <language>{{cookiecutter.language}}</language>
    <forum>{{cookiecutter.forum}}</forum>
    <source>{{cookiecutter.source}}</source>
    <website>{{cookiecutter.website}}.tv</website>
    <email>{{cookiecutter.email}}</email>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
    <news>We just released {{cookiecutter.name}}!</news>
	</extension>
</addon>
